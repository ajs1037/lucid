@using lucid.Models

@model Team

@{
    ViewData["Title"] = "Add a New team";
    Layout = "~/Pages/Shared/_Layout.cshtml";

    // get list of employees and the team model from ViewData
    IEnumerable<Employee> employees = ViewData["Employees"] as IEnumerable<Employee>;
    Team teamModel = ViewData["TeamModel"] as Team;
}

@section styles {
    <link rel="stylesheet" href="@ViewData["AssetHost"]/css/create.css" type="text/css" asp-append-version="true" />
}

<section id="hero" class="main-feature">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="title">
                    <h1></h1>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="info-section dark-grey">
    <div class="row">
        <div class="background-card">
            @using (Html.BeginForm("Edit", "Teams", FormMethod.Post))
            {
                <h3>Update team</h3>
                <div class="form-group">
                    <div class="form-item">
                        @Html.TextBoxFor(m => teamModel.TeamName, new { @class = "form-control", @placeholder = "Team Name" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-item">
                        <h5>Team Driver</h5>
                        @Html.TextBoxFor(m => teamModel.TeamDriverEmployeeId)
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-item">
                        <h5>Team Leader</h5>
                        @Html.TextBoxFor(m => teamModel.TeamLeaderEmployeeId)
                    </div>
                </div>

                <input type="submit" value="Save" class="btn btn-primary" />
            }
        </div>
    </div>
</section>